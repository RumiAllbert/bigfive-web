{
  "buildCommand": "pnpm run build",
  "outputDirectory": ".next",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "DB_URL": "@db_url",
    "DB_NAME": "@db_name",
    "DB_COLLECTION": "@db_collection"
  }
}
